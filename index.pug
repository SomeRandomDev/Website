doctype html
html
  head
    meta(charset="UTF-8")
    title Fullscreen Sections
    style.
      html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        scroll-behavior: smooth;
        overflow-x: hidden; /* ðŸ‘ˆ Prevent sideways scroll */
      }

      body {
        scroll-snap-type: y mandatory;
        overflow-y: scroll;
      }

      .section {
        height: 100vh;
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        scroll-snap-align: start;
        box-sizing: border-box; /* ðŸ‘ˆ Helps prevent overflow from padding/borders */
      }

      .section:nth-child(1) { background: lightcoral; }
      .section:nth-child(2) { background: lightblue; }
      .section:nth-child(3) { background: lightgreen; }

  body
    .section Section 1
    .section Section 2
    .section Section 3